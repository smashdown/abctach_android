<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_blog_entity_composer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:orientation="vertical"
    tools:context="com.abctech.blogtalking.module.composer.BlogEntryComposerFragment"
    tools:showIn="@layout/act_blog_entry_composer">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/bt_title"
        android:inputType="textCapSentences"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"/>

    <WebView
        android:id="@+id/wvContent"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="8dip"
        android:layout_weight="1.0"
        android:gravity="top"
        android:hint="@string/bt_content"
        android:minLines="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/common_text_color"/>

</LinearLayout>